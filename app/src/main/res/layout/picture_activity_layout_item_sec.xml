<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@drawable/bg_border_picture_ac">
    
    <ImageView
        android:id="@+id/picture_act_image_sec"
        android:src="@drawable/gpq"
        android:scaleType="centerCrop"
        android:layout_width="220dp"
        android:layout_height="220dp" />

    <ImageView
        android:id="@+id/picture_ac_image_sec_right"
        android:src="@drawable/gpq"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/picture_act_image_sec"
        android:layout_marginLeft="4dp"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:layout_height="108dp" />

    <ImageView
        android:id="@+id/pic_act_image_sec_right_bot"
        android:src="@drawable/gpq"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/picture_act_image_sec"
        android:layout_below="@id/picture_ac_image_sec_right"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:layout_height="108dp" />

    <TextView
        android:id="@+id/pic_act_content_sec"
        android:text="“我控诉”：1894法国叛国冤案"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="18sp"
        android:layout_below="@id/picture_act_image_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pic_act_pics_sec"
        android:text="10pics"
        android:drawableLeft="@drawable/lwm"
        android:textColor="@android:color/black"
        android:layout_above="@id/pic_act_content_sec"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pic_act_gentie_sec"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/picture_act_image_sec"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:text="跟帖"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pic_act_num_sec"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/picture_act_image_sec"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/pic_act_gentie_sec"
        android:text="380"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>