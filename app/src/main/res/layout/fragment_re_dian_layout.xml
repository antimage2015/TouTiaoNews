<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/bg_border_picture_ac"
    tools:context="com.crazy.toutiaonews.videofragments.ReDianFragment">

    <!-- 视频 热点，搞笑 共用-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.warmtel.android.xlistview.XListView
            android:id="@+id/redian_video_list_view"
            android:divider="@android:color/white"
            android:dividerHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/video_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>


</FrameLayout>
